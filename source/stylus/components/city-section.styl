.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #282828
  position relative
  padding 20px 0 20px 0
  +above($breakpoints.sm)
    padding 0
    height: 410px
  +above($breakpoints.md)
    height: 510px
  +above($breakpoints.xxl)
    height: 610px

  &__box
    +above($breakpoints.sm)
      position: absolute
      width 620px
      top: -50px
      left: 50%
      transform: translateX(-50%)
    +above($breakpoints.md)
      width 990px
      top: -120px
    +above($breakpoints.xxl)
      width 1180px
      top: -171px

  &__container
    width 100%
    max-width: 1180px
    background-color #282828
    border-top-left-radius: 20px
    border-top-right-radius: 20px
    padding 20px 0 0 0
    +above($breakpoints.sm)
      background-image: url('../images/city-section-cont-bg.jpg')
      background-repeat: no-repeat
      background-position: center
      background-size: cover
    +above($breakpoints.md)
      border-top-left-radius: 30px
      border-top-right-radius: 30px
      padding 43px 0 0 0
    +above($breakpoints.xxl)
      padding 60px 0 0 0

  &__line
    margin 10px auto 20px
    width 200px
    height: 1px
    +above($breakpoints.sm)
      width 471px
      height: 2px
    +above($breakpoints.md)
      width 471px
      height: 2px
    +above($breakpoints.xxl)
      width 471px
      height: 2px

  &__sub-title
    padding-bottom 20px
    +above($breakpoints.md)
      padding-bottom 38px
    +above($breakpoints.xxl)
      padding-bottom 45px

  &__container-bottom
    height: 20px
    background-color #fff
    border-top-left-radius: 20px
    border-top-right-radius: 20px
    +above($breakpoints.md)
      height: 50px
      border-top-left-radius: 30px
      border-top-right-radius: 30px

  &__bottom
    color: #171717
    background-color #fff
    border-bottom-left-radius: 20px
    border-bottom-right-radius: 20px
    padding-bottom 20px
    +above($breakpoints.md)
      border-bottom-left-radius: 30px
      border-bottom-right-radius: 30px
      padding-bottom 37px
    +above($breakpoints.xxl)
      padding-bottom 54px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 8px
    padding-top 20px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 10px
      padding-top 30px
    +above($breakpoints.md)
      padding-top 40px
    +above($breakpoints.xxl)
      padding-top 47px

.city-item
  width 260px !important
  +above($breakpoints.sm)
    width 190px !important
  +above($breakpoints.md)
    width 200px !important
  +above($breakpoints.xxl)
    width 244px !important

