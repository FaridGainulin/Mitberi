.button-next,
.button-prev
  display: none
  +above($breakpoints.xxl)
    display: block
    position: absolute
    border-radius: 50%
    width 30px
    height: 30px
  +above($breakpoints.xxl)
    width 60px
    height: 60px
.button-next
  transform: rotateY(180deg)
  top: 350px
  right: 470px
  +above($breakpoints.xxl)
    top: 720px
.button-prev
  top: 350px
  left: 470px
  +above($breakpoints.xxl)
    top: 720px

.swiper-button
  width 118px
  display: flex
  flex-direction: row
  justify-content center
  align-items: center
  gap: 30px
  margin: 30px auto 0

.swiper-pagination
  z-index 0 !important
  margin: 0 0 20px 0
  +above($breakpoints.md)
    margin: 0 0 70px 0
  +above($breakpoints.xxl)
    margin: 0 0 134px 0
.swiper-pagination-bullet
  width: 5px;
  height: 5px;
  border-radius: 50%;
  background: transparent
  border: 1px solid #6A6A6A
.swiper-pagination-bullet-active
  opacity: 1;
  background: transparent
  border: 1px solid #fff