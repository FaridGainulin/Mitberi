.finances-section
  background-color #fff

  &__container
    position relative
    color #121111
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 120px 0 20px 0
    +above($breakpoints.md)
      padding 180px 0 20px 0
    +above($breakpoints.xxl)
      padding 262px 0 20px 0

  &__bg-icon
    position: absolute
    width: 150px;
    height: auto;
    top: 80px;
    right: -91px;
    +above($breakpoints.sm)
      width: 420px;
      top: 100px;
      right: -315px;
    +above($breakpoints.md)
      width: 654px;
      top: 120px;
      right: -499px;
    +above($breakpoints.xxl)
      width 1177px
      top: 53px;
      right: -896px;

  &__title
    padding 0 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 40px 0
    +above($breakpoints.md)
      padding 0 0 60px 0
    +above($breakpoints.xxl)
      padding 0 0 81px 0

  &__box
    position relative
    display: flex
    flex-direction: column-reverse
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 34px

  &__img-logo
    position: absolute
    width: 100px;
    height: auto;
    top: 159px;
    left: -16px;
    +above($breakpoints.sm)
      width 157px
      top: -20px
      left: -38px
    +above($breakpoints.md)
      width 200px
      top: -25px
      left: -48px
    +above($breakpoints.xxl)
      width 257px
      top: -30px
      left: -58px

  &__img
    width 300px
    height: auto
    border-radius: 20px
    margin 0 auto
    +above($breakpoints.sm)
      width 300px
      margin 0
    +above($breakpoints.md)
      border-radius: 32px
      width 420px
    +above($breakpoints.xxl)
      width 512px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 30px

  &__card
    width 260px !important
    position relative
    padding 30px 10px 20px 20px
    background: linear-gradient(180deg, #f2f2f2 0%, #fff 100%);
    border-radius: 16px
    border 2px solid #f2f2f2
    display: flex
    flex-direction: column
    gap: 12px
    justify-content flex-end
    +above($breakpoints.sm)
      height: 128px
      width 200px !important
    +above($breakpoints.md)
      height: 175px
      width 253px !important
      border 3px solid #f2f2f2
    +above($breakpoints.xxl)
      border 5px solid #f2f2f2
      padding 0 10px 24px 29px
      width 302px !important
      height: 210px

  &__card-icon
    position: absolute
    width 60px
    height: auto
    right: 0
    bottom: 27px
    +above($breakpoints.sm)
      width 60px
      bottom: 32px
    +above($breakpoints.md)
      width: 91px;
      bottom: 36px;
    +above($breakpoints.xxl)
      width 121px
      bottom: 35px

  &__bottom
    color: $color-white
    position relative
    text-align: center
    background-color #121111
    border-radius: 10px
    padding 20px 10px 20px 10px
    margin-top 20px
    +above($breakpoints.sm)
      text-align: start
      padding 27px 10px 27px 22px
      margin-top 40px
    +above($breakpoints.md)
      padding 47px 10px 47px 42px
      margin-top 70px
    +above($breakpoints.xxl)
      margin-top 98px
      padding 54px 10px 53px 62px

  &__bottom-text
    color: #BDBDBD
    padding 2px 0 20px 0
    +above($breakpoints.md)
      padding 2px 0 30px 0

  &__bottom-icon
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width 278px
      height: auto
      right: 0
      bottom: 0
      border-bottom-right-radius: 10px;
    +above($breakpoints.md)
      width 365px
    +above($breakpoints.xxl)
      width 410px

.finances-item
  width 253px !important
  margin 0 auto
  +above($breakpoints.sm)
    margin 0
