.invest-section
  background-image: url('../images/invest-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #1b1b1b

  &__container
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 100px 0 110px 0

  &__sub-title,
  &__card-title
    background: linear-gradient(90deg, #d4b591 0%, #6e5e4b 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;

  &__line
    width 100%
    max-width: 100px
    height: 2px
    background-color $color-red
    margin 0 auto
    +above($breakpoints.sm)
      height: 4px
      max-width: 335px
    +above($breakpoints.md)
      height: 6px
      max-width: 450px
    +above($breakpoints.xxl)
      max-width: 671px
      height: 9px

  &__cards
    padding-top 20px
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      justify-content center
      gap: 10px
      padding-top 32px
    +above($breakpoints.md)
      gap 20px
      padding-top 42px
    +above($breakpoints.xxl)
      padding-top 50px
      gap 50px

  &__card
    width 300px !important
    height: 385px
    border-radius: 20px
    padding 20px 20px 20px 20px
    +above($breakpoints.sm)
      width 357px !important
      height: 552px
    +above($breakpoints.md)
      height: 643px
      width 409px !important
      padding 54px 51px 22px 36px

  &__card-1
    background-color #171717
    +above($breakpoints.sm)
      background-image: url('../images/invest-section-card-1-bg.jpg')
      background-repeat: no-repeat
      background-position: center
      background-size: cover

  &__card-2
    background-color #171717
    +above($breakpoints.sm)
      background-image: url('../images/invest-section-card-2-bg.jpg')
      background-repeat: no-repeat
      background-position: center
      background-size: cover

  &__card-title
    padding-bottom 15px
    padding-left 45px

  &__card-sub-title
    display: flex
    flex-direction: column
    gap: 19px
    padding-left 45px

  &__card-text
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px

  &__pb
    padding-bottom 20px
    +above($breakpoints.sm)
      padding-bottom 28px
    +above($breakpoints.md)
      padding-bottom 36px
    +above($breakpoints.xxl)
      padding-bottom 40px

  &__card-round
    height: 9px
    width 9px
    border-radius: 3px
    transform: rotate(45deg)
    background-color $color-red

  &__form
    width 100%
    max-width: 292px
    margin 0 auto
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 147px 0 13px 0
